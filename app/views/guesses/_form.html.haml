= form_for @guess do |f|
  - if @guess.errors.any?
    #error_explanation
      %h2= "#{pluralize(@guess.errors.count, "error")} prohibited this guess from being saved:"
      %ul
        - @guess.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :value
    = f.number_field :value
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
